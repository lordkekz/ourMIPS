<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:i="clr-namespace:Projektanker.Icons.Avalonia;assembly=Projektanker.Icons.Avalonia"
        xmlns:views="clr-namespace:ourMIPS_App.Views"
        xmlns:views1="clr-namespace:ourMIPS_App.Views">
    <Design.PreviewWith>
        <Border Padding="20">
            <!-- Add Controls for Previewer Here -->
        </Border>
    </Design.PreviewWith>

    <Style Selector="views1|StatusBarView">
        <Setter Property="Background" Value="{DynamicResource SystemAccentColorDark1}" />
        <Setter Property="Height" Value="24" />
    </Style>
    <Style Selector="views1|StatusBarView TextBlock">
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Margin" Value="8,0" />
    </Style>
    <Style Selector="views1|StatusBarView Rectangle">
        <Setter Property="Stroke" Value="{DynamicResource SystemChromeWhiteColor}" />
        <Setter Property="StrokeThickness" Value="1" />
        <Setter Property="Height" Value="20" />
        <Setter Property="Width" Value="0" />
        <Setter Property="Margin" Value="4, 0" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>
    <Style Selector="views1|StatusBarView ToggleButton">
        <Setter Property="Padding" Value="4,0" />
        <Setter Property="Margin" Value="0" />
        <Setter Property="VerticalAlignment" Value="Stretch" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="Background" Value="{DynamicResource SystemControlTransparentBrush}" />
    </Style>
    <Style Selector="views1|StatusBarView ToggleButton:checked /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource SystemControlTransparentBrush}" />
    </Style>
    <Style Selector="views1|StatusBarView ToggleButton:checked:pointerover /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background">
            <SolidColorBrush Color="White" Opacity="0.1" />
        </Setter>
    </Style>
    <Style Selector="views1|StatusBarView ToggleButton:unchecked i|Icon.OnContent">
        <Setter Property="IsVisible" Value="false" />
    </Style>
    <Style Selector="views1|StatusBarView ToggleButton:checked i|Icon.OffContent">
        <Setter Property="IsVisible" Value="false" />
    </Style>
    <Style Selector="views1|StatusBarView ToggleButton:unchecked TextBlock.OnContent">
        <Setter Property="IsVisible" Value="false" />
    </Style>
    <Style Selector="views1|StatusBarView ToggleButton:checked TextBlock.OffContent">
        <Setter Property="IsVisible" Value="false" />
    </Style>
</Styles>